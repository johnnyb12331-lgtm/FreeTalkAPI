# Environment Variables for FreeTalk API
# Copy this to .env and fill in your values

# MongoDB
MONGODB_URI=mongodb://localhost:27017/freetalk

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Server
PORT=5000
NODE_ENV=development

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# HTTPS (optional)
USE_HTTPS=false
SSL_KEY_PATH=/path/to/privkey.pem
SSL_CERT_PATH=/path/to/fullchain.pem

# Stripe Payment (optional)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Pixabay API (for free music)
PIXABAY_API_KEY=your_pixabay_api_key_here
PIXABAY_AUDIO_ENABLED=true

# Optional: Other music APIs
# FREEMUSICARCHIVE_API_KEY=your_fma_key
# SOUNDCLOUD_CLIENT_ID=your_soundcloud_id
